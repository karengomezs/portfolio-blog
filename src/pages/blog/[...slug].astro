---
import Layout from "../../layout/general.astro";
import { CollectionEntry, getCollection } from "astro:content";

interface Props {
  entry: CollectionEntry<"blog">;
}

export async function getStaticPaths() {
  const blogs = await getCollection("blog");

  return blogs.map((blog) => {
    return {
      params: {
        slug: blog.slug,
      },
      props: {
        entry: blog,
      },
    };
  });
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout>
  <article>
    <Content />
  </article>
</Layout>

<style is:global>
  h1 {
    @apply text-4xl font-bold my-10 py-2 text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-blue-500 hover:from-pink-500 hover:to-yellow-500;
  }
  p {
    @apply my-3 text-xl font-medium text-justify   text-slate-400;
  }
  h2 {
    @apply text-white text-xl mt-4 font-semibold;
  }
  pre {
    @apply py-3 pl-5 my-8 rounded-md;
  }
</style>
