    <style>
      h1 {
        @apply text-4xl font-bold mb-10 sm:mb-20  text-white;
      }
      .title-project {
        @apply text-center font-semibold sm:text-start  text-white;
      }
      .text-project {
        @apply text-justify  text-slate-400;
      }
      .img-profile {
        @apply w-60 rounded-full;
      }
      .img-project {
        @apply object-cover rounded;
      }
      button {
        @apply text-center font-semibold text-white bg-slate-700 rounded-md w-40 h-8 my-2;
      }
      span {
        @apply text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-blue-500 hover:from-pink-500 hover:to-yellow-500;
      }
      .introduce-text {
        @apply text-xl font-medium text-center sm:text-start sm:text-justify  text-slate-400;
      }

      h3 {
        @apply text-2xl font-semibold text-white;
      }
      a {
        @apply text-3xl font-semibold  text-white;
      }
    </style>
